<h1>Listing vendors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Url</th>
    <th>Description</th>
    <th>Following</th>
    <th>Followers</th>
    <th>Listed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vendors.each do |vendor| %>
  <tr>
    <td><%= vendor.name %></td>
    <td><%= vendor.location %></td>
    <td><%= vendor.url %></td>
    <td><%= vendor.description %></td>
    <td><%= vendor.following %></td>
    <td><%= vendor.followers %></td>
    <td><%= vendor.listed %></td>
    <td><%= link_to 'Show', vendor %></td>
    <% if can? :edit, vendor %><td><%= link_to 'Edit', edit_vendor_path(vendor) %></td><% end %>
    <% if can? :destroy, vendor %><td><%= link_to 'Destroy', vendor, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Vendor %><%= link_to 'New Vendor', new_vendor_path %><% end %>
